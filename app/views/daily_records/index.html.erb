<h1>Daily records</h1>



<table>
  <thead>
    <tr>
      <th>record date</th>
      <th>Age</th>
	  <th>Calculate Age</th>
      <th>Remedy</th>
      <th>Feed recieved</th>
      <th>Feed actual</th>
      <th>Feed remains</th>
      <th>Average weight</th>
      <th>Mortality</th>
      <th>Average temperature</th>
      <th>Average hummidity</th>
      <th>Stockman</th>
      <th>Notes</th>
      <th>Periode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @daily_records.each do |daily_record| %>
      <tr>
        <td><%= daily_record.report_date %></td>
        <td><%= daily_record.age %></td>
		<td><%= daily_record.calculate_age %></td>
        <td><%= daily_record.remedy %></td>
        <td><%= daily_record.feed_recieved %></td>
        <td><%= daily_record.feed_actual %></td>
        <td><%= daily_record.feed_remains %></td>
        <td><%= daily_record.average_weight %></td>
        <td><%= daily_record.mortality %></td>
        <td><%= daily_record.average_temperature %></td>
        <td><%= daily_record.average_hummidity %></td>
        <td><%= daily_record.stockman %></td>
        <td><%= daily_record.notes %></td>
        <td><%= daily_record.periode.code %></td>
        <td><%= link_to 'Show', daily_record %></td>
        <td><%= link_to 'Edit', edit_daily_record_path(daily_record) %></td>
        <td><%= link_to 'Destroy', daily_record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

